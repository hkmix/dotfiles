#!/usr/bin/env bash

if [[ "$#" -lt 2 ]]; then
    echo "Usage: ${0##*/} file1 file2 [v]"
    exit 0
fi

is_verbose=false

if [[ "$#" -ge 3 ]] && [[ "$3" == "v" ]]; then
    is_verbose=true
fi

if [[ $(command -v ministat > /dev/null 2>&1) ]]; then
    >&2 echo "Could not find ministat executable"
    exit 1
fi

for ci in 80 90 95 99 99.5; do
    if $is_verbose; then
        ministat -c${ci} -w80 "$1" "$2"
    else
        ministat -c${ci} -w80 "$1" "$2" | grep -i "difference"
    fi
done
